  "compilerOptions": {
    "outDir": "../../dist/apps/subscriptions",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/__mocks__/**/*.ts",
    "**/*.mock.ts"
